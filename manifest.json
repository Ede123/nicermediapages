	"applications": {
		"gecko": {
			"id": "nicermediapages@ede123",
			"strict_min_version": "45.0"
		}
	},

	"manifest_version": 2,
	"name": "Nicer Media Pages",
	"version": "4.0",
	"author": "Eduard Braun",
	"description": "More pleasing look for Firefox media pages. \r\nPorted to a WebExtension by ExE Boss.",

	"permissions": ["activeTab"],
